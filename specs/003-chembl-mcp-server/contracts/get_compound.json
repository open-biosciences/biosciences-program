{
  "tool_name": "get_compound",
  "description": "Get complete compound record by ChEMBL CURIE. Returns full Agentic Biolink entity with cross-references. Requires resolved CURIE from search_compounds.",
  "parameters": {
    "type": "object",
    "properties": {
      "chembl_id": {
        "type": "string",
        "description": "ChEMBL CURIE in format 'CHEMBL:NNNNN' (e.g., 'CHEMBL:25', 'CHEMBL:1201583').",
        "pattern": "^CHEMBL:[0-9]+$",
        "examples": ["CHEMBL:25", "CHEMBL:941", "CHEMBL:1201583"]
      },
      "slim": {
        "type": "boolean",
        "description": "If true, return minimal fields for token efficiency.",
        "default": false
      }
    },
    "required": ["chembl_id"]
  },
  "returns": {
    "oneOf": [
      {
        "type": "object",
        "description": "Compound record with cross_references",
        "properties": {
          "id": {"type": "string", "pattern": "^CHEMBL:[0-9]+$"},
          "name": {"type": ["string", "null"]},
          "molecular_formula": {"type": ["string", "null"]},
          "molecular_weight": {"type": ["number", "null"]},
          "smiles": {"type": ["string", "null"]},
          "inchi": {"type": ["string", "null"]},
          "canonical_name": {"type": ["string", "null"]},
          "synonyms": {"type": "array", "items": {"type": "string"}},
          "cross_references": {
            "type": "object",
            "description": "22-key registry (omit keys if no mapping exists)"
          }
        },
        "required": ["id"]
      },
      {
        "$ref": "#/components/schemas/ErrorEnvelope"
      }
    ]
  },
  "errors": [
    {
      "code": "UNRESOLVED_ENTITY",
      "condition": "Invalid CURIE format (missing 'CHEMBL:' prefix or non-numeric ID)",
      "recovery_hint": "Use format 'CHEMBL:NNNNN' (e.g., 'CHEMBL:123')"
    },
    {
      "code": "ENTITY_NOT_FOUND",
      "condition": "Valid CURIE but compound doesn't exist in ChEMBL",
      "recovery_hint": "ChEMBL ID not found. Verify CURIE from search_compounds results."
    },
    {
      "code": "RATE_LIMITED",
      "condition": "Rate limit exceeded",
      "recovery_hint": "Wait {backoff_seconds}s before retrying"
    },
    {
      "code": "UPSTREAM_ERROR",
      "condition": "ChEMBL API error",
      "recovery_hint": "ChEMBL API temporarily unavailable - retry in 60 seconds"
    }
  ],
  "examples": [
    {
      "request": {"chembl_id": "CHEMBL:25", "slim": false},
      "response": {
        "id": "CHEMBL:25",
        "name": "Aspirin",
        "molecular_formula": "C9H8O4",
        "molecular_weight": 180.16,
        "smiles": "CC(=O)Oc1ccccc1C(=O)O",
        "inchi": "InChI=1S/C9H8O4/c1-6(10)13-8-5-3-2-4-7(8)9(11)12/h2-5H,1H3,(H,11,12)",
        "canonical_name": "2-acetoxybenzoic acid",
        "synonyms": ["Acetylsalicylic acid", "ASA", "Ecotrin"],
        "cross_references": {
          "uniprot": ["UniProtKB:P23219"],
          "pdb": ["1PTY"],
          "pubchem_compound": ["2244"],
          "drugbank": ["DB:00945"]
        }
      }
    },
    {
      "request": {"chembl_id": "CHEMBL:25", "slim": true},
      "response": {
        "id": "CHEMBL:25",
        "name": "Aspirin",
        "molecular_formula": "C9H8O4"
      }
    }
  ],
  "constitution_compliance": {
    "principle_ii": "Strict lookup - requires resolved CURIE",
    "principle_iii": "Uses Agentic Biolink schema with cross_references",
    "principle_iv": "Supports slim mode"
  }
}
