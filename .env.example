BIOGRID_API_KEY=your_biogrid_api_key_here
NCBI_API_KEY=your_ncbi_api_key_here

NEO4J_URI=neo4j+s://your-instance-id.databases.neo4j.io
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your_cloud_password_here
NEO4J_DATABASE=neo4j
DATABASE__PROVIDER=neo4j

# Neo4j Aura API MCP Server Configuration
# Required for managing Neo4j Aura instances via MCP
# Get credentials from: https://console.neo4j.io/#aura-api-credentials
NEO4J_AURA_CLIENT_ID=your_aura_client_id_here
NEO4J_AURA_CLIENT_SECRET=your_aura_client_secret_here

OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=
MODEL_NAME=gpt-4.1-mini
PYDANTIC_AI_GATEWAY_API_KEY=


OPENAI_LOG_LEVEL=DEBUG      # OpenAI SDK internal operations
HTTPX_LOG_LEVEL=INFO         # HTTP requests to OpenAI API (method, URL, status)
GRAPHITI_LOG_LEVEL=DEBUG     # Entity/relationship extraction and timing


SEMAPHORE_LIMIT=10

# FastMCP Cloud Endpoint
FASTMCP_CLOUD_ENDPOINT=https://biosciences-mcp.fastmcp.app/mcp
